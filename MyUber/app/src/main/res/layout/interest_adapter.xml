<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你好你好"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:id="@+id/tv_interest_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01:07"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_interest_time"
        android:textSize="16sp"
        android:layout_below="@+id/tv_interest_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="社会"
        android:textSize="14sp"
        android:layout_marginLeft="20dp"
        android:id="@+id/tv_interest_tip"
        android:background="@drawable/shape_address"
        android:layout_alignTop="@+id/tv_interest_time"
        android:layout_toRightOf="@+id/tv_interest_time"
        android:layout_toEndOf="@+id/tv_interest_time" />

        <CheckBox
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/cb_select"
            android:button="@drawable/select_chectbox"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>