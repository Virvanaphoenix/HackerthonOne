<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/layout1"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/white"
>
  <DigitalClock
    android:id="@+id/dClock"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="40dp"
    android:textColor="@drawable/blue"
    android:layout_x="30dp"
    android:layout_y="32dp"
  />
  <TextView
    android:id="@+id/text1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/str_title1"
    android:textSize="20dp"
    android:textColor="@drawable/black"
    android:layout_x="10dp"
    android:layout_y="102dp"
  />
  <Button
    android:id="@+id/mButton1"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:text="@string/str_button1"
    android:textColor="@drawable/black"
    android:textSize="18dp"
    android:layout_x="190dp"
    android:layout_y="102dp"
  />
  <Button
    android:id="@+id/mButton2"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:text="@string/str_button2"
    android:textColor="@drawable/black"
    android:textSize="18dp"
    android:layout_x="190dp"
    android:layout_y="145dp"
  />

  <TextView
    android:id="@+id/setTime1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/str_default"
    android:textColor="@drawable/red"
    android:textSize="16dp"
    android:layout_x="10dp"
    android:layout_y="142dp"
  />
</AbsoluteLayout>