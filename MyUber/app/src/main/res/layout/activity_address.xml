<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/title"
        android:gravity="center"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/shape_address"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rela_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view2"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/shape_yuandian" />

            <TextView
                android:id="@+id/tv_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/view2"
                android:layout_toRightOf="@+id/view2"
                android:paddingBottom="20dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLength="10"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:text="起点"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/black" />

        <RelativeLayout
            android:id="@+id/rela_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/shape_yuandian_red" />

            <TextView
                android:id="@+id/tv_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/view"
                android:layout_toRightOf="@+id/view"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:maxLength="9"
                android:singleLine="true"
                android:ellipsize="end"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:text="终点"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </RelativeLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_address_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/selecter_next"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>